
<div class="container">
  <h1 class="customHeader">Log In</h1>

  <%= form_tag sessions_path do %>
    <div class="form-group">
      <%= label_tag :email %><br/>
      <%= text_field_tag :email, params[:email], class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= label_tag :password %><br/>
      <%= password_field_tag :password, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= submit_tag "Log in" %>
    </div>
  <% end %>
</div>
